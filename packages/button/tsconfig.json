{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ES2015"
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "noEmit": false,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/",
    "*.spec.ts",
    "*.spec.tsx"
  ]
}
